<div class="mx-auto m-4" style="width: 18rem;">
    <div class="mx-auto m-4">
        <h3>Log In</h3>
    </div>
    <form id="login-form">
        <div class="form-group">
            <label for="email-login">Email address</label>
            <input type="email" class="form-control" id="email-login" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="password-login">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="Enter password">
        </div>
        <div class="form-group">
            <button class="btn" type="submit" id="login">Log In</button>
            <button class="btn"><a href="/signup">Sign Up</a></button>
        </div>
    </form>
</div>

<script src="/js/login.js"></script>